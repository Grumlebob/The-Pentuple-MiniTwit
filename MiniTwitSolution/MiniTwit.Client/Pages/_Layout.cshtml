@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Title</title>
    <link rel="stylesheet" href="css/style.css"/>
</head>
<body>
<div class="container">
    <header>
        <h1>MiniTwit</h1>
        <nav>
            @if (IsUserLoggedIn())
            {
                <a href="/" class="nav-link">My Timeline</a>
                <a href="/public" class="nav-link">Public Timeline</a>
                <a href="/profile" class="nav-link">Profile</a>
                <a href="/logout" class="nav-link">Sign Out</a>
            }
            else
            {
                <a href="/login" class="nav-link">Sign In</a>
                <a href="/register" class="nav-link">Sign Up</a>
            }
        </nav>
    </header>

    <main>
        @Body
    </main>

    <footer>
        <p>&copy; 2025 MiniTwit. A Blazor Application.</p>
    </footer>
</div>

<script src="js/app.js"></script>
</body>
</html>

@code {
    // The title of the page can be set dynamically in the page component
    [Parameter] public string Title { get; set; } = "MiniTwit";

    // Check if the user is logged in based on session/cookie or token (use your preferred method)
    private bool IsUserLoggedIn()
    {
        // Example: Check if the user is logged in by checking the session or token
        // You can replace this with the appropriate logic, e.g., using session storage, cookies, etc.
        var user = NavigationManager.Uri.Contains("loggedInUser"); // Replace with real check
        return user;
    }
}